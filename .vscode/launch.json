    "version": "0.2.0",
    "configurations": [
        {
            "name": "run selected spec",
            "type": "node",
            "request": "launch",
            "args": ["wdio.conf.js", "--spec", "${file}"],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
            "console": "integratedTerminal", 
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
              ]
        }
    ]
}